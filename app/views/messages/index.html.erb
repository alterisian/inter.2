<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Read</th>
      <th>Previous message</th>
      <th>Next message</th>
      <th>User</th>
      <th>From user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.message %></td>
        <td><%= message.read %></td>
        <td><%= message.previous_message_id %></td>
        <td><%= message.next_message_id %></td>
        <td><%= message.user %></td>
        <td><%= message.from_user_id %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

