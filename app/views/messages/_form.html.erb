<%= form_for @message, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :message, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :message, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :read, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :read, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :previous_message_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :previous_message_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :next_message_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :next_message_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :from_user_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :from_user_id, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  messages_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
